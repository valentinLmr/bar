

function refreshForm(innerHTML) {
  const newDrinkForm = document.getElementById('new_drink');
  newDrinkForm.innerHTML = innerHTML;
}

function addDrink(drinkHTML) {
  const drinks = document.getElementById('drinks');
  drinks.insertAdjacentHTML('beforeend', drinkHTML);
}

<% if @drink.errors.any? %>
  refreshForm('<%= j render "drinks/form" %>');
<% else %>
  addDrink('<%= j render "drinks/show" %>');
  refreshForm('<%= j render "drinks/form" %> ');
<% end %>

