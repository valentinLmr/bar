
<div class="drinks_category hidden">
  <h1> Que souhaitez-vous boire ?</h1>
  <li>
    <ul id="softs">Soft</ul>
    <ul id="alcools">Alcool</ul>
    <ul id="hot_drinks">Boissons chaudes</ul>
  </li>
</div>

<div class="all_softs hidden ">
  <% @command.table.restaurant.menu.drinks.each do |drink| %>
    <h1 class="soft" data-id="<%= drink.id%>" data-click="0" ><%= drink.name%></h1>
  <% end %>
</div>

<div class="form_to_select_drink hidden ">
  <%= simple_form_for([@command, @dishcommand],remote: true) do |f| %>
    <%= f.input :drink_id, :class => "input_select_drink", :value => ""%>
    <%= f.submit "done", :class => "submit_order_dish" %>
  <% end %>
</div>



<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @command.table.restaurant.menu.drinks.in_groups_of(3, false) do |group| %>
    <% if group === @command.table.restaurant.menu.drinks.first(3) %>
      <div class="carousel-item active ">
    <% else %>
       <div class="carousel-item ">
    <%  end %>
        <div class="drink_per_5">
          <% group.each do |drink| %>

            <h1 class="soft" data-id="<%= drink.id%>" data-click="0" ><%= drink.name%></h1>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
