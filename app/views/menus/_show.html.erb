
<div class="show_menu">
  <div class="menu">
    <div id="drinks" class="d-flex">
      <% if menu.drinks.blank? %>
        Add your first Drink
      <% else %>
        <div class="menu_owner">
          <div class="header">
            <h3>Softs</h3>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">+</button>
              <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <%= render 'drinks/new', menu: menu, drink:@drink%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% menu.drinks.where(category: "Soft").each do |drink| %>
          <%= render 'drinks/show', drink: drink %>
          <% end %>
        </div>

        <div class="menu_owner">
          <h3>Alcools</h3>
          <% menu.drinks.where(category: 'Alcool') do |drink| %>
            <%= render 'drinks/show', drink: drink %>
          <% end %>
        </div>

        <div class="menu_owner">
          <h3>Hotdrinks</h3>
          <% menu.drinks.where(category: 'Hotdrink') do |drink| %>
            <%= render 'drinks/show', drink: drink %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

